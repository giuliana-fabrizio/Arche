<form id="id_form_user" class="p-3 mx-auto">
    <fieldset>
        <input id="id_user_form" name="user" hidden>
        <div class="mb-3">
            <label for="id_firstname_form_user" class="form-label">Prénom de l'utilisateur</label>
            <input id="id_firstname_form_user" type="text" name="firstname" value="" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="id_name_form_user" class="form-label">Nom de l'utilisateur</label>
            <input id="id_name_form_user" type="text" name="name" value="" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="id_mail_form_user" class="form-label">Email de l'utilisateur</label>
            <input id="id_mail_form_user" type="email" name="mail" value="" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="id_phone_form_user" class="form-label">Numéro de téléphone de l'utilisateur</label>
            <input id="id_phone_form_user" type="phone" name="phone" value="" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="id_address_form_user" class="form-label">Adresse de l'utilisateur</label>
            <input id="id_address_form_user" type="text" name="address" value="" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="id_role_form_user" class="form-label">Rôle de l'utilisateur</label>
            <select id="id_role_form_user" name="role" class="form-select" onchange="changeRole()" required>
                <option value="" selected disabled hidden>Sélectionner un rôle</option>
                <!-- TODO boucle-->
                <option value="ROLE_ADMIN">Administateur</option>
                <option value="ROLE_ADMIN_PROFESSEUR">Administateur & professeur</option>
                <option value="ROLE_PROFESSEUR">Professeur</option>
                <option value="ROLE_ETUDIANT">Étudiant</option>
                <!-- fin boucle -->
            </select>
        </div>

        <div class="mb-3">
            <label for="id_password_form_user" class="form-label">Mot de passe</label>
            <input id="id_password_form_user" type="password" name="password" value="" class="form-control" required>
        </div>

        <div id="id_container_ues" class="mb-4 selected-items">
            <label for="id_ues_form_user" class="form-label">UE associées à l'utilisateur</label>
            <div class="dropdown">
                <div
                    id="id_selected_ue"
                    aria-expanded="false"
                    data-bs-toggle="dropdown"
                    class="align-items-center d-flex flex-wrap form-select">
                    <input
                        id="id_ues_form_user"
                        type="text"
                        class="search-input"
                        placeholder="Sélectionner une ou plusieurs UE">
                </div>

                <div class="dropdown-menu dropdown-menu-end form-control shadow">
                    <div id="id_ues_list">
                        <div class="option" onclick="selectUe(this)">Option 1</div> <!-- Mettre un input invisble -->
                        <div class="option" onclick="selectUe(this)">Option 2</div>
                        <div class="option" onclick="selectUe(this)">Option 3</div>
                        <div class="option" onclick="selectUe(this)">Option 4</div>
                        <div class="option" onclick="selectUe(this)">Option 5</div>
                        <div class="option" onclick="selectUe(this)">Option 6</div>
                        <div class="option" onclick="selectUe(this)">Autre option</div>
                        <div class="disable" onclick="selectUe(this)">Pas de résultats</div>
                    </div>
                </div>
            </div>
        </div>

        <button id="id_btn_create_user" onclick="modalUser()" type="button" class="btn btn-primary w-100">
            Valider
        </button>
    </fieldset>
</form>