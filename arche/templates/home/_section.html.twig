<div id="id_section_{{ section.id }}" class="accordion-item mb-5">
    <div class="accordion-header">
        <h2 class="w-100">
            <button
                id="id_label_section"
                class="accordion-button {% if not isCollapse %} collapsed {% endif %} fs-5 fw-bold"
                data-bs-target="#collapse{{ section.id }}"
                data-bs-toggle="collapse"
                type="button">
                {{ section.label }}
            </button>
        </h2>

        {% if is_granted('ROLE_PROFESSEUR') %}
            <div class="dropdown dropdown-plus">
                <a class="dropdown-toggle-plus" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-three-dots-vertical"></i>
                </a>

                <ul class="dropdown-menu dropdown-menu-end p-0">
                    <li>
                        <button
                            id="id_btn_edit_section"
                            data-bs-toggle="modal"
                            data-bs-target="#id_add_section_modal"
                            onclick="wantEditSection('{{ section.id }}', '{{ section.label }}', '{{ section.ranking }}')"
                            class="dropdown-item text-success bg-section-actions"
                        >
                            Ã‰diter
                        </button>
                    </li>
                    <li>
                        <a
                            class="dropdown-item text-danger bg-section-actions"
                            onclick="deleteSection('id_section_{{ section.id }}')"
                        >
                            Supprimer
                        </a>
                    </li>
                </ul>
            </div>
        {% endif %}
    </div>
    <div id="collapse{{ section.id }}" class="accordion-collapse collapse {% if isCollapse %} show {% endif %}">
        <div class="accordion-body">
            {% for post in section.posts %}
                <div id="id_section_{{ section.id }}_post_{{ post.id }}">
                    <div class="align-items-center d-flex justify-content-between">
                        <div>
                            <div class="align-items-center d-flex mb-1">
                                {% if post.filetype %}
                                    <image
                                        src="{{ asset('/assets/images/' ~ post.filetype ~ '.png') }}"
                                        onerror="this.onerror = null; this.src = '{{ asset('/assets/images/other.png') }}';"
                                        class="me-3 post-img"
                                    >
                                    <a href="{{ asset('/files/' ~ post.filename) }}" target="blank" class="m-0 post-title">
                                        {{ post.label }}
                                    </a>
                                {% else %}
                                    <image src="{{ asset('/assets/images/' ~ post.getFkPostType().label ~ '.png') }}" class="me-3 post-img">
                                    <a role="button" class="m-0 post-title post-title-message">
                                        {{ post.label }}
                                    </a>
                                {% endif %}
                            </div>
                            <p class="ms-1">{{ post.description }}</p>
                        </div>

                        {% if is_granted('ROLE_PROFESSEUR') %}
                            <div class="d-flex flex-column justify-content-between ms-1">
                                <button
                                    data-bs-toggle="modal"
                                    data-bs-target="#id_add_modal"
                                    class="btn btn-success btn-sm mb-2">
                                    <i class="bi bi-pencil-square"></i>
                                </button>
                                <button onclick="deletePost('id_section_{{ section.id }}_post_{{ post.id }}')" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        {% endif %}
                    </div>
                    <hr>
                </div>
            {% endfor %}

            <p
                id="id_ajax_no_post"
                class="text-center no-result"
                style="display: {% if section.posts|length == 0%} block {% else %} none {% endif %};">
                Aucun post pour cette section. Revenez plus tard !
            </p>
        </div>
    </div>
</div>